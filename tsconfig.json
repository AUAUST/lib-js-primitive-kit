{
  "include": ["src/**/*.*"],
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2021",
    "moduleResolution": "Bundler",
    "declaration": true,
    "module": "ES2020",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
